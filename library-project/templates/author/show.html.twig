{% extends 'base.html.twig' %}

{% block title %}Détails de l'Auteur : {{ author.name }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">{{ author.name }}</h1>
    
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Biographie</h5>
            <p class="card-text">{{ author.biography ?? 'Aucune biographie disponible' }}</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Livres de l'auteur</h5>
            <ul class="list-group">
                {% for book in author.books %}
                    <li class="list-group-item">
                        <a href="{{ path('book_detail', {id: book.id}) }}">{{ book.title }}</a>
                        ({{ book.publicationYear }})
                    </li>
                {% else %}
                    <li class="list-group-item">Aucun livre trouvé</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}